<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar_with_textswitcher" />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/web_progressbar"
        style="@style/NumberProgressBar_Funny_Orange"
        android:layout_width="match_parent"
        app:progress_reached_bar_height="2pt"
        app:progress_text_size="0pt"
        app:progress_text_visibility="invisible"
        app:progress_unreached_bar_height="2pt" />

    <WebView
        android:id="@+id/web_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>